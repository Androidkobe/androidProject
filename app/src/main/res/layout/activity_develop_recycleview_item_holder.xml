<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/developer_recyclerview_holder_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="100dp"
        android:minHeight="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/developer_recyclerview_holder_item_img"
        app:layout_constraintTop_toTopOf="@+id/developer_recyclerview_holder_item_img"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/developer_recyclerview_holder_item_img"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toRightOf="@+id/developer_recyclerview_holder_item_title"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>